<div class="container">
    <div class="row">
        <div class="col-md-2">
            <img style="width:100%" src="{{image_url}}" alt="{{name}}">
        </div>
        <div class="col-md-6">
            <h2>{{name}}</h2>
            <p>{{tagline}}</p>
            <p>{{description}}</p>
            <p>
            <ul>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            </p>
            <p>{{brewers_tips}}</p>


        </div>
    </div>
</div>